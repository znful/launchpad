<style>
body {
  font-family: 'Inter', sans-serif;
  background-color: #f7f3ee;
  color: #4c4a47;
}
        .text-hey-pink { color: #fe68b3; }
        .bg-hey-pink-light { background-color: #ffeef6; }
        .bg-hey-blue-light { background-color: #e8f3ff; }
        .bg-hey-purple-light { background-color: #f6e6ff; }
        .bg-hey-green-light { background-color: #ecf8e5; }
        .text-hey-blue { color: #51a3ff; }
        .text-hey-green { color: #62b95b; }
        .border-hey-gray { border-color: #d8d6d4; }
        .btn-primary {
          background-color: #4c4a47;
          color: #fff;
          padding: 0.75rem 1.5rem;
          border-radius: 9999px;
          font-weight: 600;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
          transition: all 0.2s ease;
        }
        .btn-primary:hover {
          background-color: #383734;
        }
        .btn-secondary {
          background-color: #fff;
          color: #4c4a47;
          border: 1px solid #d8d6d4;
          padding: 0.5rem 1rem;
          border-radius: 9999px;
          font-weight: 500;
          transition: all 0.2s ease;
        }
        .btn-secondary:hover {
          background-color: #f0f0f0;
        }
        .card {
          background-color: #fff;
          border-radius: 1.5rem;
          box-shadow: 0 10px 15px rgba(0, 0, 0, 0.05);
          padding: 1.5rem;
          border: 1px solid #f0f0f0;
          transition: all 0.2s ease;
        }
        .card:hover {
          transform: translateY(-2px);
          box-shadow: 0 15px 20px rgba(0, 0, 0, 0.08);
        }
</style>
<div class="h-full flex flex-col md:flex-row">
<!-- Sidebar -->
<aside class="w-64 bg-white p-6 shadow-md rounded-r-3xl flex flex-col justify-between hidden md:flex">
  <div>
    <div class="flex items-center space-x-2">
      <span class="text-hey-pink text-3xl">âœ¦</span>
      <span class="font-bold text-2xl tracking-tight text-4c4a47">Launchpad</span>
    </div>
    <nav class="mt-10 space-y-4">
      <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-full bg-hey-pink-light text-hey-pink font-semibold">
        <i class="fas fa-briefcase w-5 h-5"></i>
        <span>My Offers</span>
      </a>
      <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-full text-gray-600 hover:bg-gray-100 transition-colors">
        <i class="fas fa-plus-circle w-5 h-5"></i>
        <span>Post an Offer</span>
      </a>
      <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-full text-gray-600 hover:bg-gray-100 transition-colors">
        <i class="fas fa-user-circle w-5 h-5"></i>
        <span>Account</span>
      </a>
    </nav>
  </div>
  <div class="p-4 border-t border-hey-gray mt-6 text-sm text-center text-gray-500">
    <p>Launchpad</p>
  </div>
</aside>

    <!-- Main Content -->
    <main class="flex-1 p-6 md:p-12">
        <div class="flex justify-between items-center mb-10">
            <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-gray-800">My Job Offers</h1>
            <button id="post-offer-btn" class="btn-primary flex items-center space-x-2">
                <i class="fas fa-plus-circle"></i>
                <span>Post New Offer</span>
            </button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Job Offer Card - Active -->
            <% for offer in @offers %>
            <div class="card">
                <div class="flex justify-between items-start mb-4">
                    <h2 class="text-xl font-bold text-gray-800"><%= offer.title %></h2>
                    <span class="bg-hey-green-light text-hey-green font-semibold text-xs px-3 py-1 rounded-full">Active</span>
                </div>
                <p class="text-sm text-gray-600 mb-2">Company: <%= offer.company_name %></p>
                <p class="text-sm text-gray-600 mb-4">Type: <%= offer.job_type.capitalize %></p>
                <div class="flex justify-end space-x-2 mt-4">
                    <%= button_to 'Edit', edit_offer_path(offer), method: :get, class: 'btn-secondary text-sm' %>
                    <%= button_to 'Delete', offer_path(offer), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn-secondary text-sm' %>
                </div>
            </div>
        <% end %>

            <!-- Job Offer Card - Draft -->
            <div class="card">
                <div class="flex justify-between items-start mb-4">
                    <h2 class="text-xl font-bold text-gray-800">Data Science Apprentice</h2>
                    <span class="bg-hey-blue-light text-hey-blue font-semibold text-xs px-3 py-1 rounded-full">Draft</span>
                </div>
                <p class="text-sm text-gray-600 mb-2">Company: DataFlow Solutions</p>
                <p class="text-sm text-gray-600 mb-4">Type: Apprenticeship</p>
                <div class="flex justify-end space-x-2 mt-4">
                    <button class="btn-secondary text-sm">Edit</button>
                    <button class="btn-secondary text-sm">Delete</button>
                </div>
            </div>

            <!-- Job Offer Card - Active -->
            <div class="card">
                <div class="flex justify-between items-start mb-4">
                    <h2 class="text-xl font-bold text-gray-800">UX/UI Design Intern</h2>
                    <span class="bg-hey-green-light text-hey-green font-semibold text-xs px-3 py-1 rounded-full">Active</span>
                </div>
                <p class="text-sm text-gray-600 mb-2">Company: Design Collective</p>
                <p class="text-sm text-gray-600 mb-4">Type: Internship</p>
                <div class="flex justify-end space-x-2 mt-4">
                    <button class="btn-secondary text-sm">Edit</button>
                    <button class="btn-secondary text-sm">Delete</button>
                </div>
            </div>

            <!-- Job Offer Card - Inactive -->
            <div class="card">
                <div class="flex justify-between items-start mb-4">
                    <h2 class="text-xl font-bold text-gray-800">Marketing Junior</h2>
                    <span class="bg-gray-200 text-gray-600 font-semibold text-xs px-3 py-1 rounded-full">Inactive</span>
                </div>
                <p class="text-sm text-gray-600 mb-2">Company: BrandX Media</p>
                <p class="text-sm text-gray-600 mb-4">Type: Junior Position</p>
                <div class="flex justify-end space-x-2 mt-4">
                    <button class="btn-secondary text-sm">Edit</button>
                    <button class="btn-secondary text-sm">Delete</button>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal for Posting an Offer -->
    <div id="offer-modal" class="fixed inset-0 z-50 overflow-y-auto bg-black bg-opacity-40 hidden flex items-center justify-center">
      <div class="bg-white p-8 rounded-2xl w-full max-w-lg mx-4 shadow-xl">
        <div class="flex justify-between items-center mb-6">
          <h3 class="text-2xl font-bold text-gray-800">Post a New Offer</h3>
          <button id="close-modal-btn" class="text-gray-400 hover:text-gray-600 transition-colors">
            <i class="fas fa-times text-xl"></i>
          </button>
        </div>
        <form>
          <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="job-title">Job Title</label>
            <input class="w-full px-4 py-3 rounded-xl border border-hey-gray focus:outline-none focus:ring-2 focus:ring-hey-pink-light" id="job-title" type="text" placeholder="e.g., Junior Back-end Developer">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="company-name">Company Name</label>
            <input class="w-full px-4 py-3 rounded-xl border border-hey-gray focus:outline-none focus:ring-2 focus:ring-hey-pink-light" id="company-name" type="text" placeholder="e.g., Tech Solutions Co.">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2" for="offer-type">Offer Type</label>
            <select class="w-full px-4 py-3 rounded-xl border border-hey-gray focus:outline-none focus:ring-2 focus:ring-hey-pink-light" id="offer-type">
              <option>Internship</option>
              <option>Junior Position</option>
              <option>Apprenticeship</option>
            </select>
          </div>
          <div class="mb-6">
            <label class="block text-gray-700 font-semibold mb-2" for="description">Description</label>
            <textarea class="w-full px-4 py-3 rounded-xl border border-hey-gray focus:outline-none focus:ring-2 focus:ring-hey-pink-light" id="description" rows="4" placeholder="Briefly describe the role..."></textarea>
          </div>
          <div class="flex justify-end space-x-3">
            <button type="button" id="cancel-modal-btn" class="btn-secondary">Cancel</button>
            <button type="submit" class="btn-primary">Post Offer</button>
          </div>
        </form>
      </div>
    </div>
</div>

    <script>
        const postOfferBtn = document.getElementById('post-offer-btn');
        const offerModal = document.getElementById('offer-modal');
        const closeModalBtn = document.getElementById('close-modal-btn');
        const cancelModalBtn = document.getElementById('cancel-modal-btn');

        postOfferBtn.addEventListener('click', () => {
          offerModal.classList.remove('hidden');
        });

        closeModalBtn.addEventListener('click', () => {
            offerModal.classList.add('hidden');
        });

        cancelModalBtn.addEventListener('click', () => {
            offerModal.classList.add('hidden');
        });

        // Close modal when clicking outside of it
        offerModal.addEventListener('click', (e) => {
            if (e.target === offerModal) {
                offerModal.classList.add('hidden');
            }
        });
    </script>
