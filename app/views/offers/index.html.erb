<% content_for :title, "Offers" %>

<body class="bg-slate-t0 text-slate-950 antialiased dark:bg-slate-900 dark:text-slate-200">
  <div class="container mx-auto max-w-7xl px-4 md:px-8 py-6 mt-26">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= search_form_for @q, url: offers_path, html: { class: "flex flex-col sm:flex-row gap-4" } do |f| %>
      <%= f.search_field :title_or_company_name_cont,
        placeholder: "Search for a role or company...",
        class: "flex-1 px-5 py-3 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-purple-500",
        aria: { label: "Search for jobs" }
      %>

      <%= f.search_field :city_or_country_cont,
        placeholder: "Search for a country or city...",
        class: "flex-1 px-5 py-3 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-purple-500",
        aria: { label: "Search for jobs" }
      %>

      <%= render partial: "dropdown", locals: { 
        title: "Contract Types",
        form: f,
        field_name: :contract_type_in,
        options: Offer.contract_types,
        button_classes: "w-full sm:w-auto bg-purple-700 text-white font-semibold py-3 px-8 rounded-full hover:bg-purple-600 transition duration-300 ease-in-out transform hover:scale-105 shadow-lg whitespace-nowrap",
        colour_helper: method(:contract_filter_colour)
      } %>

      <%= render partial: "dropdown", locals: { 
        title: "Job Types",
        form: f,
        field_name: :job_type_in,
        options: Offer.job_types,
        button_classes: "w-full sm:w-auto bg-fuchsia-600 text-white font-semibold py-3 px-8 rounded-full hover:bg-pink-500 transition duration-300 ease-in-out transform hover:scale-105 shadow-lg whitespace-nowrap",
        colour_helper: method(:job_filter_colour)
      } %>

      <%= f.submit "Search",
        class: "w-full sm:w-auto bg-orange-400 text-white font-semibold py-3 px-8 rounded-full hover:bg-yellow-500 transition duration-300 ease-in-out transform hover:scale-105 shadow-lg"
      %>
    <% end %>

    <div class="mt-4 flex flex-wrap gap-2">
        <%= render partial: "filters", locals: { type: :contract_type_in, colour_helper: method(:contract_filter_colour) } %>
        <%= render partial: "filters", locals: { type: :job_type_in, colour_helper: method(:job_filter_colour) } %>
    </div>

    <div class="flex flex-col justify-center items-center mt-6 mb-6">
      <% if @offers.any? %>
        <%== pagy_info(@pagy) %>
        <%== pagy_nav(@pagy) %>
      <% end %>
    </div>

    <div class="space-y-4">
      <% if @offers.any? %>
        <%= render @offers %>
      <% else %>
        <p class="text-center my-10">No offers found.</p>
      <% end %>
    </div>

    <div class="flex flex-col justify-center items-center mt-6 mb-6">
      <% if @offers.any? %>
        <%== pagy_info(@pagy) %>
        <%== pagy_nav(@pagy) %>
      <% end %>
    </div>
  </div>
</body>
