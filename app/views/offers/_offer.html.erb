<div class="bg-white rounded-2xl shadow p-6 flex justify-between items-center dark:bg-slate-800">
  <div>
    <h2 class="text-lg font-semibold"><%= offer.title %></h2>
    <p class="text-gray-500">
      <%= offer.company_name %>
      <% if offer.city.present? || offer.country.present? %>
        Â· <%= [offer.city, offer.country].compact.join(", ") %>
      <% end %>
    </p>

    <div class="mt-2 flex flex-wrap gap-2">
      <span class="px-3 py-1 text-xs border-1 rounded-full font-medium <%= contract_type_colour(offer.contract_type.to_s) %>">
        <%= offer.contract_type.titleize %>
      </span>
      <span class="px-3 py-1 text-xs border-1 rounded-full font-medium <%= job_type_colour(offer.job_type.to_s) %>">
        <%= offer.job_type.titleize %>
      </span>
    </div>
  </div>

  <%= link_to "View Details",
              offer,
              class: "px-5 py-2 rounded-full bg-purple-600 hover:bg-purple-500 text-white font-medium transition" %>
</div>
