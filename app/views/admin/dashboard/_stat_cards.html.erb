<div class="d-flex flex-wrap gap-2">
  <!-- Card 1: Total Users -->
  <div class="card flex-fill">
    <div class="card-body d-flex align-items-center">
      <div class="me-3">
        <span class="bg-primary text-white avatar">
          <i class="ti ti-users"></i>
        </span>
      </div>
      <div class="d-flex justify-content-between w-100 align-items-center">
        <div class="col">
          <h3 class="mb-0">Total Users</h3>
          <div class="text-muted">Amount of currently registered users.</div>
        </div>
        <h1 class="mb-0"><%= @user_count %></h1>
      </div>
    </div>
  </div>

  <!-- Card 2: Total Offers -->
  <div class="card flex-fill">
    <div class="card-body d-flex align-items-center">
      <div class="me-3">
        <span class="bg-success text-white avatar">
          <i class="ti ti-tag"></i>
        </span>
      </div>
      <div class="d-flex justify-content-between w-100 align-items-center">
        <div class="col">
          <h3 class="mb-0">Published Offers</h3>
          <div class="text-muted">Amount of published offers</div>
        </div>
        <h1 class="mb-0"><%= @published_offers_count %></h1>
      </div>
    </div>
  </div>

  <!-- Card 3: All time offers count -->
  <div class="card flex-fill">
    <div class="card-body d-flex align-items-center">
      <div class="me-3">
        <span class="bg-warning text-white avatar">
          <i class="ti ti-package"></i>
        </span>
      </div>
      <div class="d-flex justify-content-between w-100 align-items-center">
        <div class="col">
          <h3 class="mb-0">All Time Offers</h3>
          <div class="text-muted">Amount of all offers ever created</div>
        </div>
        <h1 class="mb-0"><%= @all_offers_count %></h1>
      </div>
    </div>
  </div>

  <!-- Card 4: Total Applications -->
  <div class="card flex-fill">
    <div class="card-body d-flex align-items-center">
      <div class="me-3">
        <span class="bg-danger text-white avatar">
          <i class="ti ti-clipboard-list"></i>
        </span>
      </div>
      <div class="d-flex justify-content-between w-100 align-items-center">
        <div class="col">
          <h3 class="mb-0">Total Applications</h3>
          <div class="text-muted">Amount of all applications submitted</div>
        </div>
        <h1 class="mb-0"><%= @applications_count %></h1>
      </div>
    </div>
  </div>
</div>
