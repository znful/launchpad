<%= content_for :header_buttons do %>
  <%= link_to new_offer_path, class: 'btn btn-primary' do %>
    <i class="ti ti-plus me-2"></i> 
    <span>New Offer</span>
  <% end %>
<% end %>

<section class="mt-4" id="offers-section">

  <div class="row row-cards ">

    <% if @offers.empty? %>
      <div class="col-12">
        <div class="align-items-center text-center">
          <h2>No offers available</h2>
          <p class="text-muted">Click the button below to create your first offer.</p>
          <%= link_to new_offer_path, class: 'btn btn-primary' do %>
            <i class="ti ti-plus me-2"></i> 
            <span>Create your first offer</span>
        </div>
      </div>
    <% end %>

      <% @offers.each do |offer| %>
        <div class="col-sm-6 col-lg-4">
          <div class="card">
            <div class="card-body">
              <h3 class="card-title"><%= offer.title %></h3>
              <p class="card-text"><%= truncate(offer.description, length: 100) %></p>
              <p class="card-text"><strong>Price:</strong> $<%= offer.price %></p>
              <div class="d-flex justify-content-between">
                <%= link_to 'View', offer_path(offer), class: 'btn btn-sm btn-outline-primary' %>
                <%= link_to 'Edit', edit_offer_path(offer), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to 'Delete', offer_path(offer), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</section>
