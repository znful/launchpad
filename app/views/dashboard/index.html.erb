<style>
body {
    background-color: #f7f3ee;
    color: #4c4a47;
}
        .text-hey-pink { color: #fe68b3; }
        .bg-hey-pink-light { background-color: #ffeef6; }
        .bg-hey-blue-light { background-color: #e8f3ff; }
        .bg-hey-purple-light { background-color: #f6e6ff; }
        .bg-hey-green-light { background-color: #ecf8e5; }
        .text-hey-blue { color: #51a3ff; }
        .text-hey-green { color: #62b95b; }
        .text-hey-purple { color: #a259ff; }
        .border-hey-gray { border-color: #d8d6d4; }
        .btn-primary {
            background-color: #fc8f6c;
            color: #4c4a47;
            border: 1px solid #d8d6d4;
            padding: 0.5rem 1rem;
            border-radius: 9999px;
            transition: all 0.2s ease;
        }
        .btn-primary:hover {
            background-color: #fca856;
        }
        .btn-secondary {
            background-color: #fff;
            color: #4c4a47;
            border: 1px solid #d8d6d4;
            padding: 0.5rem 1rem;
            border-radius: 9999px;
            font-weight: 500;
            transition: all 0.2s ease;
        }
        .btn-secondary:hover {
            background-color: #f0f0f0;
        }
        .card {
            background-color: #fff;
            border-radius: 1.5rem;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.05);
            padding: 1.5rem;
            border: 1px solid #f0f0f0;
            transition: all 0.2s ease;
        }
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 20px rgba(0, 0, 0, 0.08);
        }
</style>
<div class="flex flex-col md:flex-row">
    <!-- Sidebar -->
    <div class="mr-0 md:mr-6 lg:mr-64">
        <%= render 'sidebar' %>
    </div>

    <!-- Main Content -->
    <main class="flex-auto p-6 lg:p-12">
        <div class="flex justify-between items-center mb-10">
            <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-gray-800">Dashboard</h1>
            <%= link_to "New Offer", new_offer_path, class: "font-semibold text-white bg-green-700 px-4 py-3 rounded-full hover:bg-green-800 transition transition-colors duration-200" %>
        </div>

        <hr class="border-t border-hey-gray mb-8">

        <div class="flex md:flex-row flex-col lg:gap-8 lg:mb-12 mb-8 gap-4 justify-center">
            <!-- Total Offers Card -->
            <div class="card flex w-fit min-w-96 transition transition-all duration-200">
                <div class="flex flex-row items-center">
                    <div class="p-4 bg-hey-purple-light rounded-lg mr-4">
                        <svg class="w-8 h-8 text-hey-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6h13M9 6l-2 2m0 0l-2-2m2 2v12a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2H9z"></path>
                        </svg>
                    </div>
                    <div class="flex flex-row gap-4">
                        <div class="flex flex-col lg:border-r border-hey-gray px-4">
                            <h2 class="text-2xl font-semibold text-gray-800">Total Offers</h2>
                            <p class="text-3xl font-bold text-hey-purple"><%= @pagy.count %></p>
                        </div>
                        <div class="lg:flex flex-col border-r border-hey-gray pl-4 pr-6 hidden">
                            <h2 class="text-2xl font-semibold text-gray-800">Active Offers</h2>
                            <p class="text-3xl font-bold text-hey-green"><%= @pagy.count %></p>
                        </div>
                        <div class="lg:flex flex-col border-r border-hey-gray px-4 hidden">
                            <h2 class="text-2xl font-semibold text-gray-800">Pending Offers</h2>
                            <p class="text-3xl font-bold text-hey-blue">0</p>
                        </div>
                        <div class="lg:flex flex-col px-4 hidden">
                            <h2 class="text-2xl font-semibold text-gray-800">Expired Offers</h2>
                            <p class="text-3xl font-bold text-red-600">0</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card flex w-fit min-w-96">
                <div class="flex flex-row items-center">
                    <div class="p-4 bg-hey-pink-light rounded-lg mr-4">
                        <svg class="w-8 h-8 text-hey-pink" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6h13M9 6l-2 2m0 0l-2-2m2 2v12a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2H9z"></path>
                        </svg>
                    </div>
                    <div class="flex flex-col">
                        <h2 class="text-2xl font-semibold text-gray-800">Total Views</h2>
                        <p class="text-3xl font-bold text-hey-pink">0</p>
                    </div>
                </div>
            </div>
            <div class="card flex w-fit min-w-96">
                <div class="flex flex-row items-center">
                    <div class="p-4 bg-orange-100 rounded-lg mr-4">
                        <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6h13M9 6l-2 2m0 0l-2-2m2 2v12a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2H9z"></path>
                        </svg>
                    </div>
                    <div class="flex flex-col">
                        <h2 class="text-2xl font-semibold text-gray-800">Total Interactions</h2>
                        <p class="text-3xl font-bold text-orange-500">0</p>
                    </div>
                </div>
            </div>
            <div class="card flex w-fit min-w-96">
                <div class="flex flex-row items-center">
                    <div class="p-4 bg-amber-100 rounded-lg mr-4">
                        <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6h13M9 6l-2 2m0 0l-2-2m2 2v12a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2H9z"></path>
                        </svg>
                    </div>
                    <div class="flex flex-col">
                        <h2 class="text-2xl font-semibold text-gray-800">Total Applications</h2>
                        <p class="text-3xl font-bold text-amber-500">0</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 xl:grid-cols-2 xl:grid-cols-3 gap-8">
            <!-- Job Offer Card - Active -->
            <% for offer in @offers %>
                <div class="card">
                    <div class="flex justify-between items-start mb-4">
                        <h2 class="text-xl font-bold text-gray-800"><%= offer.title %></h2>
                        <span class="bg-hey-green-light text-hey-green font-semibold text-xs px-3 py-1 rounded-full">Active</span>
                    </div>
                    <p class="text-sm text-gray-600 mb-2"><%= offer.company_name %> | <%= offer.job_type.capitalize %> | <%= offer.contract_type.capitalize %></p>
                    <p class="text-sm text-gray-600 mb-4"> <%= offer.city %>, <%= offer.country %></p>
                    <div class="flex justify-end space-x-2 mt-4">
                        <%= button_to 'Edit', edit_offer_path(offer), method: :get, class: 'btn-secondary text-sm cursor-pointer' %>
                        <%= button_to 'Delete', offer_path(offer), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn-secondary text-sm cursor-pointer' %>
                    </div>
                </div>
            <% end %>
        </div>
        <% if @offers.any? %>
            <%== pagy_info(@pagy) %>
            <%== pagy_nav(@pagy) %>
        <% end %>
    </main>
</div>
