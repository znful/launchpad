      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-2 tracking-tight">
        Launchpad
      </h1>
    </div>
    <!-- Search Bar CTA Section -->
    <main class="space-y-6">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-4">
        Launch Your Career
      </h2>
      <p class="text-lg md:text-xl text-gray-600 mb-8">
      Your future starts here. Discover junior, internship, and apprenticeship roles.
      </p>
      <%# The form action will be replaced with a Rails route helper like `jobs_path` %>
      <form action="#" method="get" class="flex flex-col sm:flex-row gap-4">
        <input
        type="search"
        name="q" <%# A Rails convention to use 'q' for query %>
        placeholder="Search for a role or company..."
        class="flex-grow w-full py-3 px-6 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-300 ease-in-out text-gray-700"
        aria-label="Search for jobs"
        >
        <button
          type="submit"
          class="w-full sm:w-auto bg-blue-600 text-white font-semibold py-3 px-8 rounded-xl hover:bg-blue-700 transition duration-300 ease-in-out transform hover:scale-105 shadow-lg"
          >
          Search
        </button>
      </form>
      <!-- Popular Searches Section -->
      <div class="mt-8 text-gray-500 text-sm md:text-base">
        <p>Popular searches:</p>
        <div class="flex flex-wrap justify-center mt-2 gap-2">
          <%# In a real Rails app, you might loop through a collection of popular searches %>
          <%# @popular_searches.each do |search| %>
            <%#   <span class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-xs hover:bg-gray-300 transition-colors cursor-pointer"><%= link_to search.name, jobs_path(q: search.name) %>
              <%# end %>
              <span class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-xs hover:bg-gray-300 transition-colors cursor-pointer">Web Developer Intern</span>
              <span class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-xs hover:bg-gray-300 transition-colors cursor-pointer">Marketing Apprentice</span>
              <span class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-xs hover:bg-gray-300 transition-colors cursor-pointer">Data Analyst Junior</span>
              <span class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-xs hover:bg-gray-300 transition-colors cursor-pointer">UX Designer Internship</span>
        </div>
      </div>
    </main>
  </div>
</div>
