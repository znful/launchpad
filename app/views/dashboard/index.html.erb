<%= content_for :header_buttons do %>
  <button
    type="button"
    class="btn btn-primary mb-3"
    data-bs-toggle="modal"
    data-bs-target="#new-offer-modal"
  >
    <i class="ti ti-plus me-2"></i>
    New Offer
  </button>

  <%= render "shared/form", offer: @offer %>
<% end %>

<section class="mt-4" id="offers-section">
  <% if @offers.empty? %>
    <div class="col-12">
      <div class="align-items-center text-center">
        <h2>No offers available</h2>

        <p class="text-muted">
          Click the button below to create your first offer.
        </p>

        <button
          type="button"
          class="btn btn-primary mb-3"
          data-bs-toggle="modal"
          data-bs-target="#new-offer-modal"
        >
          <i class="ti ti-plus me-2"></i>
          New Offer
        </button>
      </div>
    </div>
  <% end %>

  <% if @offers.any? %>
    <div class="row row-cards">
      <div class="col-sm-6 col-lg-4">
        <div class="card">
          <div class="card-body">
            <div class="subheader">Total views</div>

            <div class="h1 mb-2 align-middle"><%= @view_count %></div>

            <div class="text-secondary">
              views increased by x since last month
            </div>

            <div class="ratio ratio-21x9 placeholder mt-3">
              <div class="placeholder-image"></div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-lg-4">
        <div class="card">
          <div class="card-body">
            <div class="subheader">Total interactions</div>

            <h1 class="h1 mb-2"><%= @interaction_count %></h1>

            <div class="text-secondary">
              interactions increased by x since last month
            </div>

            <div class="ratio ratio-21x9 placeholder mt-3">
              <div class="placeholder-image"></div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-lg-4">
        <div class="card">
          <div class="card-body">
            <div class="subheader">Total applications</div>

            <h1 class="h1 mb-2"><%= @application_count %></h1>

            <div class="text-secondary">
              applications increased by x since last month
            </div>

            <div class="ratio ratio-21x9 placeholder mt-3">
              <div class="placeholder-image"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr class="mb-2">
    <div id="offers-filters" class="row" data-controller="dashboard">
      <%= search_form_for @q, url: dashboard_path, method: :get, class: "form-fieldset border-0", data: { "dashboard-target": "form" } do |f| %>
        <div class="d-flex justify-content-between gap-2 align-items-end p-0">
          <div class="flex-grow-1">
            <%= f.label :title_or_company_name_cont, "Job Title or Company :", class: "form-label d-block" %>
            <%= f.text_field :title_or_company_name_cont, class: "form-control", data: { action: "blur->dashboard#submitForm" } %>
          </div>

          <div class="flex-grow-1">
            <label class="form-label">Location:</label>
            <%= text_field_tag "q[location]", params.dig(:q, :location), class: "form-control", data: { action: "blur->dashboard#submitForm" } %>
          </div>

          <div>
            <label class="form-label">Distance (km):</label>
            <%= number_field_tag "q[distance]", params.dig(:q, :distance) || 10, min: 1, step: 1, class: "form-control", data: { action: "blur->dashboard#submitForm" } %>
          </div>

          <div id="form-buttons">
            <%= f.submit "Search", class: "btn btn-primary" %>
            <%= link_to "Clear", dashboard_path, class: "btn" %>
          </div>
        </div>
        <div class="mt-2">
          <label class="form-check form-switch">
            <%= f.check_box :verification_status_eq,
              { checked: params[:q] && params[:q][:verification_status_eq] == '2', class: "form-check-input", data: { action: "change->dashboard#submitForm" } },
              2, nil %>
            <%= f.label :verification_status_eq, 'Verified Offers Only' %>
          </label>
        </div>
      <% end %>
    </div>
    <div class="row row-cards">
      <% @offers.each do |offer| %>
        <%= render partial: "offer_card", locals: { offer: offer } %>
      <% end %>

      <% end %>
    </div>
    <div class="d-flex justify-content-center py-4">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
</section>
