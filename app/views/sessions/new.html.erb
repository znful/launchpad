<div class="container py-6">
  <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

  <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

  <%= form_with url: session_path, class: "form-fieldset" do |form| %>
    <%= form.label :email_address, class: "form-label" %>
    <%= form.email_field :email_address, class: "form-control", required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %>

    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control", required: true, autocomplete: "current-password", placeholder: "Enter your password" %>

    <%= form.submit "Sign in", class: "btn" %>
  <% end %>

  <%= link_to "Forgot password?", new_password_path %>
</div>
