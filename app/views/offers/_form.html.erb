<%= form_with(model: offer, local: true) do |form| %>
  <% if offer.errors.any? %>
    <div class="mb-6 rounded-lg border border-red-300 bg-red-50 p-4 text-red-700">
      <h2 class="font-semibold mb-2">
        <%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:
      </h2>
      <ul class="list-disc ml-6 text-sm space-y-1">
        <% offer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mx-auto max-w-2xl bg-white p-6 rounded-xl shadow-md">
    <div class="space-y-6">
      <% [:company_name, :title, :description, :city, :country, :apply_link].each do |field| %>
        <div>
          <%= form.label field, class: "block text-sm font-semibold text-gray-700" %>
          <%= form.text_field field, class: [
            "mt-2 block w-full rounded-md border px-3 py-2 shadow-sm focus:ring-2 focus:ring-blue-500 sm:text-sm",
            offer.errors[field].any? ? "border-red-400 focus:ring-red-500" : "border-gray-300 focus:border-blue-500"
          ] %>
          <% if offer.errors[field].any? %>
            <p class="mt-1 text-sm text-red-600"><%= offer.errors[field].first %></p>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= form.label :contract_type, class: "block text-sm font-semibold text-gray-700" %>
        <%= form.select :contract_type, Offer.contract_types.keys, {}, class: [
          "mt-2 block w-full rounded-md border px-3 py-2 shadow-sm focus:ring-2 focus:ring-blue-500 sm:text-sm",
          offer.errors[:contract_type].any? ? "border-red-400 focus:ring-red-500" : "border-gray-300 focus:border-blue-500"
        ] %>
      </div>

      <div>
        <%= form.label :job_type, class: "block text-sm font-semibold text-gray-700" %>
        <%= form.select :job_type, Offer.job_types.keys, {}, class: [
          "mt-2 block w-full rounded-md border px-3 py-2 shadow-sm focus:ring-2 focus:ring-blue-500 sm:text-sm",
          offer.errors[:job_type].any? ? "border-red-400 focus:ring-red-500" : "border-gray-300 focus:border-blue-500"
        ] %>
      </div>

      <div>
        <%= form.submit "Save Offer", class: "w-full sm:w-auto rounded-md bg-blue-600 px-4 py-2.5 text-white font-medium shadow hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-1 transition" %>
      </div>
    </div>
  </div>
<% end %>

