<style>
body {
  font-family: 'Inter', sans-serif;
  background-color: #f7f3ee;
  color: #4c4a47;
}
        .text-hey-pink { color: #fe68b3; }
        .bg-hey-pink-light { background-color: #ffeef6; }
        .bg-hey-blue-light { background-color: #e8f3ff; }
        .bg-hey-purple-light { background-color: #f6e6ff; }
        .bg-hey-green-light { background-color: #ecf8e5; }
        .text-hey-blue { color: #51a3ff; }
        .text-hey-green { color: #62b95b; }
        .border-hey-gray { border-color: #d8d6d4; }
        .btn-primary {
          background-color: #4c4a47;
          color: #fff;
          padding: 0.75rem 1.5rem;
          border-radius: 9999px;
          font-weight: 600;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
          transition: all 0.2s ease;
        }
        .btn-primary:hover {
          background-color: #383734;
        }
        .btn-secondary {
          background-color: #fff;
          color: #4c4a47;
          border: 1px solid #d8d6d4;
          padding: 0.5rem 1rem;
          border-radius: 9999px;
          font-weight: 500;
          transition: all 0.2s ease;
        }
        .btn-secondary:hover {
          background-color: #f0f0f0;
        }
        .card {
          background-color: #fff;
          border-radius: 1.5rem;
          box-shadow: 0 10px 15px rgba(0, 0, 0, 0.05);
          padding: 1.5rem;
          border: 1px solid #f0f0f0;
          transition: all 0.2s ease;
        }
        .card:hover {
          transform: translateY(-2px);
          box-shadow: 0 15px 20px rgba(0, 0, 0, 0.08);
        }
</style>
<div class="h-full flex flex-col md:flex-row">
    <!-- Sidebar -->
    <%= render 'sidebar' %>

    <!-- Main Content -->
    <main class="flex-1 p-6 md:p-12">
        <div class="flex justify-between items-center mb-10">
            <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-gray-800">My Job Offers</h1>
            <%= link_to "New Offer", new_offer_path, class: "btn-primary" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Job Offer Card - Active -->
            <% for offer in @offers %>
                <div class="card">
                    <div class="flex justify-between items-start mb-4">
                        <h2 class="text-xl font-bold text-gray-800"><%= offer.title %></h2>
                        <span class="bg-hey-green-light text-hey-green font-semibold text-xs px-3 py-1 rounded-full">Active</span>
                    </div>
                    <p class="text-sm text-gray-600 mb-2">Company: <%= offer.company_name %></p>
                    <p class="text-sm text-gray-600 mb-4">Type: <%= offer.job_type.capitalize %></p>
                    <div class="flex justify-end space-x-2 mt-4">
                        <%= button_to 'Edit', edit_offer_path(offer), method: :get, class: 'btn-secondary text-sm' %>
                        <%= button_to 'Delete', offer_path(offer), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn-secondary text-sm' %>
                    </div>
                </div>
            <% end %>
        </div>
        <% if @offers.any? %>
            <%== pagy_info(@pagy) %>
            <%== pagy_nav(@pagy) %>
        <% end %>
    </main>
</div>
