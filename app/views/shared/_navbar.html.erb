<header class="navbar navbar-expand-md d-print-none">
  <div class="container-xl">
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbar-menu"
      aria-controls="navbar-menu"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- BEGIN NAVBAR LOGO -->
    <%= link_to root_path, class: "navbar-brand navbar-brand-autodark me-3", "aria-label": "Launchpad" do %>
      <%= image_tag "rocket_logo.png", style: "height: 32px", alt: "Launchpad Logo" %>
    <% end %>

    <!-- END NAVBAR LOGO -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to root_path, class: "nav-link" do %>
          <span class="nav-link-icon">
            <i class="ti ti-home me-1 fs-2"></i>
          </span>
          <span class="nav-link-title">Home</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to offers_path, class: "nav-link" do %>
          <span class="nav-link-icon">
            <i class="ti ti-calendar me-1 fs-2"></i>
          </span>
          <span class="nav-link-title">Offers</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to dashboard_path, class: "nav-link" do %>
          <span class="nav-link-icon">
            <i class="ti ti-user-edit me-1 fs-2"></i>
          </span>
          <span class="nav-link-title">Dashboard</span>
        <% end %>
      </li>
    </ul>

    <div class="navbar-nav flex-row order-md-last ms-auto">
      <li class="nav-item">
        <div data-controller="theme">
          <button data-action="click->theme#toggle" class="nav-link">
            <i data-theme-target="icon" class="ti ti-sun"></i>
          </button>
        </div>
      </li>
      <li class="nav-item">
        <% if user_signed_in? %>
          <div class="nav-link">
            <i class="ti ti-user me-1 fs-2"></i>
            <span class="nav-link-title"><%= current_user.display_name %></span>
          </div>
        <% end %>
      </li>
      <li class="nav-item">
        <div class="nav-item">
          <% if user_signed_in? %>
            <%= link_to session_path, data: { turbo_method: :delete }, class: "nav-link" do %>
              <span class="nav-link-icon">
                <i class="ti ti-login me-1 fs-2"></i>
              </span>
              <span class="nav-link-title">Logout</span>
            <% end %>
          <% else %>
            <%= link_to new_session_path, class: "nav-link" do %>
              <span class="nav-link-icon">
                <i class="ti ti-login-2 me-1 fs-2"></i>
              </span>
              <span class="nav-link-title">Login</span>
            <% end %>
          <% end %>
        </div>
      </li>
    </div>
  </div>
</header>
