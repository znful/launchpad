<%# badge colours %>
<% contract_colour = contract_type_colour(offer.contract_type.to_s) %>
<% job_colour = job_type_colour(offer.job_type.to_s) %>

<div id="<%= dom_id offer %>" class="accordion mb-3">
  <div class="accordion-item">
    <h2 class="accordion-header" id="heading-<%= offer.id %>">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= offer.id %>" aria-expanded="false" aria-controls="collapse-<%= offer.id %>">
        <%= offer.title %> - <%= offer.company_name %> - <span class="badge badge-sm bg-<%= contract_colour %>-lt text-<%= contract_colour %>"><%= offer.contract_type.humanize %></span> - <span class="badge badge-sm bg-<%= job_colour %>-lt text-<%= job_colour %>"><%= offer.job_type.humanize %></span>
      </button>
    </h2>
    <div id="collapse-<%= offer.id %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= offer.id %>">
      <div class="accordion-body">
        <p><strong>Location:</strong> <%= offer.address %></p>
        <p><strong>Description:</strong> <%= offer.description %></p>
        <a href="<%= offer.application_link %>" class="btn btn-primary" target="_blank">Apply Now</a>
      </div>
    </div>
  </div>
</div>
