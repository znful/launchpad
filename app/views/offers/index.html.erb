<% content_for :title, "Offers" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="max-w-4xl mx-auto space-y-6">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Offers</h1>
      <%= link_to "New offer", new_offer_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>

    <div>
      <%= search_form_for @q, url: offers_path, html: { class: "flex flex-col sm:flex-row gap-4" } do |f| %>

        <%= f.search_field :title_or_company_name_cont,
          placeholder: "Search for a role or company...",
          class: "flex-grow w-full py-3 px-6 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-300 ease-in-out text-gray-700",
          aria: { label: "Search for jobs" }
        %>

        <%= f.search_field :city_or_country_cont,
          placeholder: "Search for a country or city...",
          class: "flex-grow w-full py-3 px-6 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-300 ease-in-out text-gray-700",
          aria: { label: "Search for jobs" }
        %>

        <% Offer.contract_types.each do |key, value| %>
          <label>
            <%= f.check_box :contract_type_in, { multiple: true }, value, nil %>
            <%= key.titleize %>
          </label>
        <% end %>

        <% Offer.job_types.each do |key, value| %>
          <label>
            <%= f.check_box :job_type_in, { multiple: true }, value, nil %>
            <%= key.titleize %>
          </label>
        <% end %>

        <%= f.submit "Search",
          class: "w-full sm:w-auto bg-blue-600 text-white font-semibold py-3 px-8 rounded-xl hover:bg-blue-700 transition duration-300 ease-in-out transform hover:scale-105 shadow-lg"
        %>
      <% end %>
    </div>

    <div class="flex justify-center mt-6 mb-6">
      <% if @offers.any? %>
        <%== pagy_info(@pagy) %>
        <%== pagy_nav(@pagy) %>
      <% end %>
    </div>

    <div id="offers" class="min-w-full divide-y divide-gray-200 space-y-5">
      <% if @offers.any? %>
        <% @offers.each do |offer| %>
          <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
            <%= render offer %>
            <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
              <%= link_to "Show", offer, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
              <%= link_to "Edit", edit_offer_path(offer), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
              <%= button_to "Destroy", offer, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center my-10">No offers found.</p>
      <% end %>
    </div>
    <div class="flex justify-center mt-6 mb-8">
      <% if @offers.any? %>
        <%== pagy_info(@pagy) %>
        <%== pagy_nav(@pagy) %>
      <% end %>
    </div>
  </div>
</div>
