<div class="card mb-4">
  <div class="card-header">
    <h3 class="mb-0">Latest Offers</h3>
  </div>
  <div class="card-body p-0">
    <table class="table table-striped table-hover mb-0">
      <thead>
        <tr>
          <th scope="col">Company</th>
          <th scope="col">Title</th>
          <th scope="col">Status</th>
          <th scope="col">Verification Status</th>
          <th scope="col">Created by</th>
          <th scope="col">Created At</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @recent_offers.each do |offer| %>
          <tr>
            <td><%= offer.company_name %></td>
            <td><%= offer.title %></td>
            <td><%= badge_for :status, offer.status  %></td>
            <td><%= badge_for :verification_status, offer.verification_status %></td>
            <td><%= offer.user.display_name %></td>
            <td><%= offer.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td>
              <%= link_to "View", "#", class: "btn btn-sm btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "View All Offers", "#", class: "btn m-2" %>
</div>
